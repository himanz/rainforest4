<%= form_for @product do |f| %>
<div class="field">
	<%= f.label :name %><br />
	<%= f.text_field :name %>
</div>
<div class="field">
	<%= f.label :description %><br />
	<%= f.text_area :description %>
</div>
  <%= f.label :price_in_cents %><br />
  <%= f.number_field :price_in_cents %>
<div class="actions">
  <%= f.submit "Submit" %>
</div>
<% end %>
